<div style="margin-left: 20px" ng-controller="teamCtrl">
    <div style="height: 10px"></div>
    <div layout="column">
        <div>
            <span style="margin: 10px;">团队列表</span>
        </div>
        <div style="margin: 10px" class="between">
            <div></div>
            <button class="btn btn-success" ng-click="showAddTeamDialog($event)">+ 新建团队</button>
        </div>
    </div>
    <div style="border-top: 1px solid #d6dadc;">
        <table class="table table-striped table-hover">
            <thead>
                <th>团队</th>
                <th>团队描述</th>
                <th>团队成员</th>
                <th>操作</th>
            </thead>
            <tbody>
            <tr ng-repeat="team in teams track by $index">
                <th><span ng-click="showUpdateTeamDialog($event,team)">{{team.team_name}}</span></th>
                <td>{{team.desc}}</td>
                <td><div ng-dropdown-multiselect="" options="users" selected-model="team.members"  extra-settings="settings"></div></td>
                <td><md-icon ng-click="removeTeam($event, team._id)">delete</md-icon></td>
            </tr>
            </tbody>
        </table>
        <div style="text-align:center;">
            <nav aria-label="Page navigation pagination-lg pagination-sm">
                <ul class="pagination">
                    <li>
                        <a aria-label="Previous" ng-click="getTeams(currentPage-1)"  ng-class="{'disabled': currentPage===1}">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li ng-repeat="page in pages" ng-class="{'active': currentPage===page}"><a ng-click="getTeams(page)">{{page}}</a></li>
                    <li>
                        <a  ng-click="getTeams(currentPage+1)" aria-label="Next" ng-class="{'disabled': currentPage===pageCount}">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>


    </div>

</div>