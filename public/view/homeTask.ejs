<div style="margin-left: 20px" ng-controller="taskCtrl">
    <div style="height: 10px"></div>
    <div layout="column">
        <div>
            <span style="margin: 10px;">任务列表</span>
        </div>
        <div style="margin: 10px" class="between">
            <div layout="row">
                <span>按团队查看项目:</span>
                <div ng-dropdown-multiselect="" options="teams" selected-model="selectTeams" events="customEvents"  extra-settings="settings" style="margin-top: -7px;margin-left: 10px"></div>
            </div>
            <button class="btn btn-success" ng-click="onAddTaskClick($event)">+ 新建任务</button>
        </div>
    </div>
    <div style="border-top: 1px solid #d6dadc;">
        <table class="table table-striped table-hover">
            <thead>
                <th width="15%">任务</th>
                <th width="20%">任务内容</th>
                <th  width="10%">任务负责人</th>
                <th width="10%">任务所属项目</th>
                <th width="10%">操作</th>
            </thead>
            <tbody>
            <tr ng-repeat="task in tasks track by $index">
                <th ng-click="onEditTaskClick($event, task)">{{task.task_name}}</th>
                <td>{{task.desc}}</td>
                <td>{{task.owner.username}}({{task.owner.email}})</td>
                <td>{{task.project.project_name}}</td>
                <td><md-icon ng-click="removeTask($event, task._id)">delete</md-icon></td>
            </tr>
            </tbody>
        </table>
        <div style="text-align:center;">
            <nav aria-label="Page navigation pagination-lg pagination-sm">
                <ul class="pagination">
                    <li>
                        <a aria-label="Previous" ng-click="getTasks(currentPage-1)"  ng-class="{'disabled': currentPage===1}">
                            <span aria-hidden="true">&laquo;</span>
                        </a>
                    </li>
                    <li ng-repeat="page in pages" ng-class="{'active': currentPage===page}"><a ng-click="getTasks(page)">{{page}}</a></li>
                    <li>
                        <a  ng-click="getTasks(currentPage+1)" aria-label="Next" ng-class="{'disabled': currentPage===pageCount}">
                            <span aria-hidden="true">&raquo;</span>
                        </a>
                    </li>
                </ul>
            </nav>
        </div>


    </div>

</div>